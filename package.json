    "serve-tests": "webpack-dev-server -d --content-base modules/__tests__/browser --no-info modules/__tests__/browser/tests.js modules/__tests__/browser/tests-bundle.js"
  },
  "engines": {
    "node": ">=0.4.7"
  },
  "dependencies": {
    "bodec": "~0.1.0",
    "d": "~0.1.1",
    "events": "~1.0.1"
  },
  "devDependencies": {
    "expect": "^1.1.0",
    "jshint": "^2.5.10",
    "mocha": "^2.0.1",
    "webpack": "^1.4.13",
    "webpack-dev-server": "^1.6.6"
  },
  "bugs": {
    "url": "https://github.com/mjackson/bufferedstream/issues"
  },
  "browser": {
